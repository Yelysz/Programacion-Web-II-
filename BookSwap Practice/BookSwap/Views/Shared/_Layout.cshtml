<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookSwap</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookSwap.styles.css" asp-append-version="true" />
</head>

<body class="flex flex-col min-h-screen bg-gray-50 text-gray-800">
    <header class="bg-white shadow">
        <nav class="max-w-7xl mx-1 flex flex-wrap items-center justify-between p-4">
            <a asp-area="" asp-controller="Home" asp-action="Index"
               class="text-2xl font-bold  hover:text-indigo-800">
                BookSwap
            </a>

            <!-- Botón hamburguesa (móvil) -->
            <button id="menu-btn" class="block md:hidden text-gray-600 hover:text-indigo-600 focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            <!-- Enlaces -->
            <ul id="menu" class="hidden md:flex space-x-6">
                <li>
                    <a asp-area="" asp-controller="Libros" asp-action="Index"
                       class="text-gray-700 hover:text-indigo-600 font-medium">
                        Catálogo
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Libros" asp-action="Compartir"
                       class="text-gray-700 hover:text-indigo-600 font-medium">
                        Compartir
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Script simple para alternar el menú móvil -->
        <script>
            document.getElementById('menu-btn').addEventListener('click', () => {
              document.getElementById('menu').classList.toggle('hidden');
            });
        </script>
    </header>

    <div class="container">
        <main role="main" class="pb-3 flex-grow">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookSwap - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
