@model BookSwap.Models.Libro

@{
    ViewData["Title"] = "Compartir un Libro";
}

<div class="container mx-auto p-4 max-w-lg">
    <h1 class="text-3xl font-bold mb-6 text-emerald-700">¡Comparte tu Libro!</h1>
    <p class="mb-6 text-gray-600">
        Llena el formulario para agregar tu libro al catálogo de intercambio de la comunidad.
    </p>

    <div class="bg-white p-8 rounded-xl shadow-lg">
        <form asp-controller="Libros" asp-action="Compartir" method="post" class="space-y-4">

            <!-- Campo Título -->
            <div class="flex flex-col">
                <label for="titulo" class="font-semibold mb-1 text-gray-700">Título</label>
                <input asp-for="Titulo" type="text" class="border border-gray-300 p-2 rounded-lg focus:border-indigo-500" required />
            </div>

            <!-- Campo Autor -->
            <div class="flex flex-col">
                <label for="autor" class="font-semibold mb-1 text-gray-700">Autor</label>
                <input asp-for="Autor" type="text" class="border border-gray-300 p-2 rounded-lg focus:border-indigo-500" required />
            </div>

            <!-- Campo ISBN -->
            <div class="flex flex-col">
                <label for="isbn" class="font-semibold mb-1 text-gray-700">ISBN</label>
                <input asp-for="ISBN" type="text" class="border border-gray-300 p-2 rounded-lg focus:border-indigo-500" required />
            </div>

            <!-- Botón de Envío -->
            <div class="pt-4">
                <button type="submit" class="w-full bg-emerald-600 text-white font-bold py-2 rounded-lg hover:bg-emerald-700 transition duration-150">
                    Compartir Libro
                </button>
            </div>
        </form>
    </div>
</div>