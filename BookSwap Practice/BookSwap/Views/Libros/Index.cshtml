@model IEnumerable<BookSwap.Models.Libro>

@{
    ViewData["Title"] = "Catálogo BookSwap";
}

<div class="container p-4">
    <h1 class="text-3xl font-bold mb-6 text-indigo-700">Catálogo de Libros para Intercambio</h1>

    <!-- Formulario de Búsqueda -->
    <form asp-controller="Libros" asp-action="Buscar" method="get" class="mb-6 flex gap-4">
        <input type="text" name="q" placeholder="Buscar por Título o Autor..." class="border p-2 rounded-lg flex-grow" value="@ViewBag.TerminoBusqueda" />
        <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">Buscar</button>
        <a asp-action="Compartir" class="bg-emerald-600 text-white px-4 py-2 rounded-lg hover:bg-emerald-700 transition flex items-center">
            Compartir Nuevo Libro
        </a>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.TerminoBusqueda))
    {
        <p class="mb-4 text-lg">
            Resultados para: <span class="font-semibold">"@ViewBag.TerminoBusqueda"</span>
        </p>
    }

    <!-- Listado de Libros -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var libro in Model)
        {
            <div class="bg-white p-6 rounded-xl shadow-lg border-t-4 @(libro.Disponible ? "border-green-500" : "border-red-500")">
                <h2 class="text-xl font-bold mb-2 text-gray-800">@libro.Titulo</h2>
                <p class="text-gray-600 mb-3">
                    <span class="font-semibold">Autor:</span> @libro.Autor
                </p>
                <p class="text-sm text-gray-500 mb-4">
                    <span class="font-semibold">ISBN:</span> @libro.ISBN
                </p>
                <span class="inline-block px-3 py-1 text-sm font-semibold rounded-full @(libro.Disponible ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                    @(libro.Disponible ? "Disponible" : "Intercambiado")
                </span>

                @if (libro.Disponible)
                {
                    <button class="mt-4 w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">
                        Solicitar Intercambio
                    </button>
                }
            </div>
        }

        @if (!Model.Any())
        {
            <p class="text-gray-500 md:col-span-3">No se encontraron libros que coincidan con la búsqueda.</p>
        }
    </div>
</div>